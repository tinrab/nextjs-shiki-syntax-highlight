root = true

[*]
indent_style = space
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.{toml,yaml,json,proto,md,mdx}]
indent_size = 2

[*.{js,ts,tsx,css}]
indent_size = 2

[*.sh]
indent_style = tab

[*.{md,mdx}]
max_line_length = off
trim_trailing_whitespace = false

[*.hbs]
ij_formatter_enabled = false
